<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet  author="prashant" logicalFilePath="path-independent" id="add-temporary-column">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="vehicle" columnName="temp_brand"/>
            </not>
        </preConditions>
        <addColumn tableName="vehicle">
            <column name="temp_brand" type="varchar(20)"/>
        </addColumn>
        <update tableName="vehicle">
            <column name="temp_brand" value="NISSAN"/>
            <where>master_brand = 'NISSAN' AND temp_brand is null</where>
        </update>
        <update tableName="vehicle">
            <column name="temp_brand" value="RENAULT"/>
            <where>master_brand = 'RENAULT'  AND temp_brand is null</where>
        </update>
        <update tableName="vehicle">
            <column name="temp_brand" value="MITSUBISHI"/>
            <where>master_brand = 'MITSUBISHI'  AND temp_brand is null</where>
        </update>
    </changeSet>

    <changeSet id="update-cross-badge" author="prashant">
        <update tableName="vehicle">
            <column name="is_cross_badged" value="false"/>
            <where>master_brand=device_master_brand and is_cross_badged is null</where>
        </update>
    </changeSet>
    <changeSet  author="prashant" logicalFilePath="path-independent" id="update-temp-column">
        <sql>
            UPDATE vehicle
            SET temp_brand=master_brand
            WHERE temp_brand is null;
        </sql>
    </changeSet>
</databaseChangeLog>